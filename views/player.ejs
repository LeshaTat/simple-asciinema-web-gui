<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>Playing: <%= filename %></title>
  <link rel="stylesheet" href="/asciinema-player/bundle/asciinema-player.css">
  <link rel="stylesheet" href="/node_modules/@fontsource/fira-code/index.css">
  <style>
    
    body {
      font-family: -apple-system, BlinkMacSystemFont, 'Segoe UI', Roboto, Oxygen, Ubuntu, Cantarell, 'Open Sans', 'Helvetica Neue', sans-serif;
      max-width: 800px;
      margin: 0 auto;
      padding: 20px;
      background-color: #f5f5f5;
    }
    h1 {
      color: #333;
      border-bottom: 1px solid #ddd;
      padding-bottom: 10px;
    }
    .player-container {
      margin: 20px 0;
      overflow: auto;
      resize: both;
      max-width: 100%;
      max-height: 100vh;
      border: 1px solid #ccc;
    }
    .back-link {
      display: inline-block;
      margin-top: 20px;
      padding: 8px 16px;
      background-color: #fff;
      border-radius: 4px;
      text-decoration: none;
      color: #333;
      border: 1px solid #ddd;
      transition: all 0.2s ease;
    }
    .back-link:hover {
      background-color: #f9f9f9;
      border-color: #999;
    }
  </style>
</head>
<body>
  <h1>Playing: <%= filename %></h1>
  
  <div class="player-container">
    <div id="player-container"></div>
  </div>
  
  <a href="/" class="back-link">Back to List</a>
  
  <script src="/asciinema-player/bundle/asciinema-player.min.js"></script>
  <script>
    document.addEventListener('DOMContentLoaded', function() {
      // Create the player
      const playerContainer = document.getElementById('player-container');
      AsciinemaPlayer.create('/casts/<%= filename %>', playerContainer, {
        autoPlay: true,
        preload: true,
        terminalFontFamily: '"Fira Code", monospace',
        terminalFontSize: '16px',
        terminalLineHeight: 1.4,
/*        theme: {
          background: '#282c33',
          foreground: '#f8f8f2',
          selection: '#44475a',
          cursor: '#f8f8f2'
        }*/
      });
    });
  </script>
</body>
</html>
